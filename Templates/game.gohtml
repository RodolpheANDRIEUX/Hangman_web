{{template "base"}}
{{template "background"}}

<script src="/Assets/Script/login.js" defer></script>
<link rel="stylesheet" href="/Assets/Css/game.css">

<section id="game_page">


<div class="container z-index-up" id="FirstPlan">
    {{.}}
    <div class="column" id="word">
        <h1>Hangman Game</h1>
        <h3 id="hangman_word">{{.Game.WordDisplayed}}</h3>
        {{ if eq .State "WIN" }}
        <h4 id="success_text">{{.Message}}</h4>
        {{ end }}
    </div>
    <div class="column" id="content-hangman">
        <p>Letters suggested :
            {{range .Game.BadGuess}}
            {{.}}
            {{end}}
        </p>
        {{ if eq .Error true}}
        <h4 id="error_text">{{.Message}}</h4>
        {{end}}
        <form  class="form-hangman" onsubmit="UpdateWord(); event.preventDefault();" >
            {{ if eq .State "WIN" }}
                <button class="button_play_again" onclick="window.location.href='/hangman-replay';">Play Again</button>
                <button class="button_play_again" onclick="window.location.href='/hangman-stop';">Exit Game</button>
            {{ else }}
            <label for="letter-input"></label>
            <input class="form-hangman-input" id="letter-input" autofocus name="Letter" required autocomplete="off" placeholder="Choose a letter or guess a word">
            <input type="submit" name="Submit" value="Validate ðŸ‘Œ" />
            {{ end }}
        </form>
    </div>

    <div class="column hangman_state">
        {{ if ne .Game.Tries 0 }}
            <img src="/Assets/Hangman_images/state_{{.Game.Tries}}.png" alt="hangman-{{.Game.Tries}}">
        {{ end }}
    </div>
</div>

</section>
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="/Assets/Css/game.css">
    <title>Hangman</title>
</head>
<body>
{{.}}
<div class="container">
    <div class="column">
        <h1>Hangman Game</h1>
        <h3 id="hangman_word">{{.Game.WordDisplayed}}</h3>
        {{ if eq .State "won" "goodGuess" }}
        <h4 id="success_text">{{.Message}}</h4>
        {{ end }}
    </div>
    <div class="column">
        <p>Letters suggested :
            {{range .Game.BadGuess}}
            {{.}}
            {{end}}
        </p>
        {{ if eq .Error true}}
        <h4 id="error_text">{{.Message}}</h4>
        {{end}}
        <form action="/hangman" method="POST" class="form-hangman">
            {{ if eq .State "lost" "won" }}
            <input type="submit" name="Replay" value="Play Again ?" />
            {{ else }}
            <input class="form-hangman-input" autofocus name="Letter" required autocomplete="off" placeholder="Choose a letter or guess a word">
            <input type="submit" name="Submit" value="Validate ðŸ‘Œ" />
            {{ end }}
        </form>
    </div>

    <div class="column hangman_state">
        <img src="/Assets/Hangman_images/state_{{.Game.Tries}}.png" alt="hangman-{{.Game.Tries}}">
    </div>
</div>


</body>
</html>
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/Assets/Css/mainMenu-v1.css">
    <link rel="stylesheet" href="/Assets/Css/gameMenu.css">
    <title>Hangman</title>
</head>
<body>
<section id="gameMenu">
    <div class="container">
        <H2 class="HangmanTitle">YOU {{.State}}</H2>

        <div class="content">
            <div class="score_board">
                <h4>Hangman web - Leaderboard</h4>
                <ol>
                    {{range .Scores}}
                        <div class="score_line">
                            <p class="name">{{index . 0}}</p>
                            <p class="score">{{index . 1}}</p>
                        </div>
                    {{end}}
                </ol>
            </div>
        </div>

        <form id="PlayAgainForm" method="post" action="/mainMenu-Play">
            <input class="MenuPlay" type="submit" name="PlayAgain" value="PLAY AGAIN">
        </form>

        <form id="Logut" method="post" action="/">
            <input class="MenuPlay" type="submit" name="Logout" value="Logout">
        </form>
    </div>
</section>


</body>
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/Assets/Css/login.css">
    <script src="/Assets/Script/login.js" defer></script>
    <title>Hangman</title>
</head>

<body>
<section id="login_page">

    <div class="container">
        <div class="hangmanTitle">
            <h1 onclick="closeAll()">HANGMAN</h1>
            {{ if eq .Message "Wrong username or password"}}
                <p>{{.Message}}</p>
            {{end}}
            {{ if eq .Message "This username is already taken"}}
                <p>{{.Message}}</p>
            {{end}}
        </div>
        <div class="content  z-index-up">
            <div class="button_user" onclick="window.location.href='/mainMenu';">
                <p>Play Now</p>
            </div>

            <div onclick="showSignupForm()" id="container-play-form" class="button_user">
                <p>Sign Up</p>
                <div id="sinup-form" class="signup_form">
                    <form action="/sign-up">
                        <label for="name">Username: </label>
                        <input type="text" name="username" id="username" required>
                        <label for="password">Password: </label>
                        <input type="password" name="password" id="email" required minlength="6">
                        <input type="submit" value="Sign-Up">
                    </form>
                    <div>
                        <span>Do you have an account ? <br> Click here to login : </span>
                        <button class="pop-up-btn" type="submit" onclick="handlePopup(true)">Login</button>
                    </div>
                </div>
            </div>

            <div id="login-popup" class="login-popup">

                <p>Login</p>
                <div id="login-form" class="login_form">
                    <form action="/log-in">
                        <label for="name">Username: </label>
                        <input type="text" name="username" id="username" required>
                        <label for="email">Password: </label>
                        <input type="password" name="password" id="email" required minlength="6">
                        <input type="submit" value="Login">
                    </form>
                </div>

                <button class="close-popup-button" onclick="handlePopup(false)"> Close</button>
            </div>

        </div>
    </div>

    {{template "background"}}

</section>

</body>